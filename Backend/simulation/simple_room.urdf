<?xml version="1.0" ?>
<robot name="simple_room">

  <!-- Flat floor -->
  <link name="floor">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="5 5 0.1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="5 5 0.1" />
      </geometry>
    </collision>
  </link>

  <!-- Ramp with tilt (about 28 degrees) -->
  <link name="ramp">
    <visual>
      <origin xyz="1 0 0.05" rpy="0.5 0 0"/> <!-- 0.5 rad = ~28Â° -->
      <geometry>
        <box size="1 2 0.1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="1 0 0.05" rpy="0.5 0 0"/>
      <geometry>
        <box size="1 2 0.1" />
      </geometry>
    </collision>
  </link>

</robot>
